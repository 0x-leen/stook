{
  "name": "stook-root",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "examples/*",
      "website"
    ]
  },
  "scripts": {
    "format": "prettier --write \"packages/**/src/**/*.{ts,tsx}\"",
    "test": "lerna run --parallel --stream test",
    "test:watch": "lerna run --parallel --stream test:watch",
    "build": "lerna run --stream build",
    "coveralls": "jest --coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage",
    "publish": "lerna publish --force-publish=*"
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "jest": {
    "preset": "ts-jest",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/",
      "/.history/"
    ]
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/react": "^17.0.8",
    "@types/react-dom": "^17.0.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "coveralls": "^3.1.0",
    "jest": "^27.0.1",
    "lerna": "^4.0.0",
    "ts-jest": "^27.0.1",
    "tsdx": "^0.14.1",
    "tslib": "^2.2.0"
  }
}
